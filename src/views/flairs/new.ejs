<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <h1>New Tag</h1>
<!-- #1 -->
      <form action="/topics/<%= topicId %>/flairs/create" method="post">
        <div class="form-group">
          <label for="name">Tag Name</label>
          <input type="text" class="form-control" name="name" aria-describedby="nameHelp" placeholder="Enter Tag Name">
        </div>
        <div class="form-group">
          <label for="color">Tag Color</label>
          <select class="form-control" name="color" placeholder="Select Tag Color">
              <option value="red">red</option>
              <option value="purple">purple</option>
              <option value="blue">blue</option>
              <option value="pink">pink</option>
              <option value="green">green</option>
          </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>