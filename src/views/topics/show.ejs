<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
    <style>
      .purple {
        color: purple;
      }
      .red {
        color: red;
      }
      .green {
        color: green;
      }
      .blue {
        color: blue;
      }
      .pink {
        color: magenta;
      }
    </style>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <h1><%= topic.title %></h1>

      <a href="/topics/<%= topic.id %>/edit" class="btn btn-warning">Edit</a>
      <a href="/topics/<%= topic.id %>/posts/new" class="btn btn-success">New Post</a>
      <a href="/topics/<%= topic.id %>/flairs/new" class="btn btn-success">New Tag</a>
      <form style="display:initial" action="/topics/<%= topic.id %>/destroy" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>

      <p><%= topic.description %></p>
      
      <h3>Tags</h3>
      <% topic.flairs.forEach((flair) => { %>
        <li class="list-group-item <%= flair.color %>">
          <form style="display:initial" action="/topics/<%= topic.id %>/flairs/<%= flair.id %>/destroy" method="post">
            <button type="submit" class="btn btn-danger">x</button>
          </form>
          <span> <%= flair.name %></span>
        </li>
      <% }) %>
      

      <hr>

   <h1>Posts</h1>

   <ul class="list-group">
     <% topic.posts.forEach((post) => { %>
       <li class="list-group-item">
         <a href="/topics/<%= topic.id %>/posts/<%= post.id %>"> <%= post.title %> </a>
       </li>
     <% }) %>
   </ul>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>